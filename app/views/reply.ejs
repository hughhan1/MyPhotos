  <script type="text/javascript" src="/photos/services/photos.client.service.js"></script>
  <script type="text/javascript" src="/photos/config/photos.client.routes.js"></script>

  <script type="text/javascript" src="/replies/replies.client.module.js"></script>
  <script type="text/javascript" src="/replies/controllers/replies.client.controller.js"></script>
  <script type="text/javascript" src="/replies/services/replies.client.service.js"></script>
